{
  "name": "typescript-api-starter",
  "version": "1.0.0",
  "description": "A basic starter for an Express.js API with help of Typescript",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "dev:debug": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint --fix src",
    "test": "mocha --exit",
    "delete": "rmdir dist /s /q"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [],
  "authors": "rixcian <rostislav.kremecek@protonmail.com>",
  "license": "MIT",
  "dependencies": {
    "@mikro-orm/cli": "^4.5.5",
    "@mikro-orm/core": "^4.5.5",
    "@mikro-orm/postgresql": "^4.5.5",
    "@mikro-orm/reflection": "^4.5.5",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ethereumjs-util": "^7.0.10",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/mocha": "^8.2.2",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.6.0",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.5",
    "@types/supertest": "^2.0.11",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      ".idea",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn run dev:debug",
    "ext": "ts"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./dist/mikro-orm.config.js",
      "./src/mikro-orm.config.ts"
    ]
  }
}
